<source>
  @type  forward
  @id    input1
  @label @mainstream
  bind   0.0.0.0
  port   24224
</source>

<filter **>
  @type stdout
</filter>

<label @mainstream>
  <filter docker.**>
    @type record_transformer
    enable_ruby true
    <record>
      docker_host {{ hostname }}
      @timestamp ${ require 'time'; Time.now.utc.iso8601(3) }
    </record>
  </filter>

  <match docker.**>
    @type elasticsearch
    @id docker
    logstash_format true
    logstash_prefix logstash
    host {{ fluentd_elasticsearch_host }}
    port {{ fluentd_elasticsearch_port }}
    flush_interval 5s
    index_name fluentd
    type_name fluentd
    include_tag_key true
    buffer_type file
    buffer_path /fluentd/buffer/docker.elasticsearch.*.buffer
    reload_connections false
    time_key_format %Y-%m-%dT%H:%M:%S.%N%z
  </match>

  <match fluent.**>
    @type file
    @id fluent
    path /fluentd/log/fluent.*.log
    flush_interval 5s
    append true
    time_slice_format %Y%m%d
    time_slice_wait 10m
    time_format %Y%m%dT%H%M%S%z
  </match>

  <match **>
    @type file
    @id output1
    path /fluentd/log/data.*.log
    flush_interval 5s
    append true
    time_slice_format %Y%m%d
    time_slice_wait 10m
    time_format %Y%m%dT%H%M%S%z
  </match>
</label>
